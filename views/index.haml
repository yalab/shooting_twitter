!!!doctype
%html
  %head
    %meta{'http-equiv' => 'Content-Type', 'content' => 'text/html; charset="UTF-8"'}
    %link{'rel' => 'stylesheet', :href => '/media/css/style.css'}
  %body
    %dl#messages
    - @posts.each do |post|
      %dt
        %img{'src' => post['user'] && post['user']['profile_image_url'], :width => '48px', :height => '48px'}
        = post['user']['name'] if post['user']
      %dd= post['text']
  %script{:src => '/media/js/jquery-1.3.2.min.js'}
  %script{:src => '/media/js/index.js'}
    

    